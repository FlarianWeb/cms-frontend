{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"vite.themes.*",
		"themes.config.*",
		"env.d.ts",
		"vite.config.*",
		"src/**/*",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@/*": ["src/assets/*"]
		},
		"types": ["vite-plugin-vue-layouts/client"]
	},
	"vueCompilerOptions": {
		"plugins": ["@vue/language-plugin-pug"]
	}
}
