{
	"extends": "@tsconfig/node18/tsconfig.json",
	"include": [
		"vite.config.*",
		"vite.themes.*",
		"themes.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		"src/utils/common.*",
		"src/models/common.*",
		"src/models/common.ts"
	],
	"compilerOptions": {
		"composite": true,
		"noEmit": true,
